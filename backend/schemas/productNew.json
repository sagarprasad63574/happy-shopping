{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.product.com/productNew.schema.json",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "description": {
            "type": "string"
        },
        "price": {
            "type": "number"
        },
        "discountPercentage": {
            "type": "number"
        },
        "rating": {
            "type": "number"
        },
        "stock": {
            "type": "number"
        },
        "brand": {
            "type": "string"
        },
        "category": {
            "type": "string"
        },
        "thumbnail": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "id",
        "title",
        "description",
        "price",
        "discountPercentage",
        "rating",
        "stock",
        "brand",
        "category",
        "thumbnail"
    ]
}